{% extends 'base.html.twig' %}

{% block title %}Coincoins index{% endblock %}

{% block body %}
    <h1>Coincoins index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coincoin in coincoins %}
            <tr>
                <td>{{ coincoin.id }}</td>
                <td>{{ coincoin.content }}</td>
                <td>{{ coincoin.createdAt ? coincoin.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_coincoins_show', {'id': coincoin.id}) }}">show</a>
                    <a href="{{ path('app_coincoins_edit', {'id': coincoin.id}) }}">edit</a>
